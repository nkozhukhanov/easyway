{
  "name": "easyway-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot that provides interesting facts about locations using OpenAI GPT-4.1-mini",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "telegram",
    "bot",
    "openai",
    "location",
    "facts"
  ],
  "author": "EasyWay Bot",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.18.2",
    "openai": "^5.0.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.1",
    "typescript": "^5.4.0",
    "tsx": "^4.11.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
} 